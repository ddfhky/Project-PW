<aside>
	<form action="/logout" method="POST">
		<% if(username != undefined ){ %>
			<label class="message-aside"><%= username %></label>
			<hr id="hr-aside">
			<div class="btn">
				<button class ="btn-aside-login-logout" type="submit" >LOGOUT</button>
			</div>
		<%}else{%>
			<label class="message-aside">You are not logged in.</label>
			<div class="btn">
				<button class ="btn-aside-login-logout" type="submit" >LOGIN</button>
			</div>			
		<%}%>
	</form>
</aside>

<div class="the-quiz">
    <form>
        <h2 class="titles">The result of the quiz</h2>
        <hr class="hr-correct-answers">
        <h2 class="correct-answers">Correct: <%= correctAnswers %>/<%= all %></h2>
        <hr class="hr-correct-answers">
        <br>
        <% for(var i=0; i<intrebari.length; ++i) { %>
            <div class="question-in-quiz">   
                <p><b><%= intrebari[i].intrebare %></b></p>
            </div>     
            <% var c=0; %>
            <div class="variante-in-quiz">
            <% for(var j=0 in intrebari[i].variante){ %>
                    <input type="radio" name="question<%= i %>" value="<%= c++ %>"/>
                    <label for="question<%= i %>"><%= intrebari[i].variante[j] %></label> 
                    <br>
            <% }%>
            <br>
            <label id="correct-answers-with-input"><b>Correct answer:</b> </label>
            <input id="the-box-with-answer" type="text" name="answer<%= i %>" value="<%= intrebari[i].variante[intrebari[i].corect] %>" readonly></input>
            </div>
            <br>

        <% } %>

        <br>
    </form>
</div>